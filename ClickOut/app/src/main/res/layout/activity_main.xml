<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/menuBackground">
    <TextView
        android:text="@string/game_title"
        android:id="@+id/game_title"
        android:layout_marginTop="50dp"
        android:textSize="65sp"
        android:textColor="@color/menuTitle"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />
    <RelativeLayout
        android:id="@+id/spl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/btn_single_player"
            android:textSize="35sp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/play_button"
            android:src="@drawable/ic_play_arrow"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/btn_single_player_black_layer"
            android:textSize="35sp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/play_button_dark"
            android:elevation="1dp"
            android:layout_marginStart="15dp"/>
        <ImageButton
            android:id="@+id/btn_single_player_white_layer"
            android:textSize="35sp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/play_button_shadow"
            android:elevation="0dp"
            android:layout_marginStart="30dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageButton
            android:id="@+id/btn_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:src="@drawable/ic_touch_app"
            android:background="@drawable/mode_button"
            android:textColor="#fff"
            android:rotation="90"
            android:elevation="5dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_settings"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:background="@drawable/settings_button"
            android:textColor="#fff"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:elevation="5dp"/>
        <ImageButton
            android:id="@+id/btn_stats"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_insert_chart"
            android:background="@drawable/stats_button"
            android:textColor="#fff"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:elevation="5dp"/>
        <ImageButton
            android:id="@+id/btn_exit"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            android:background="@drawable/exit_app_button"
            android:textColor="#fff"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:elevation="5dp"/>
    </LinearLayout>
</RelativeLayout>